<!DOCTYPE html>
<html lang="pt-BR" class="h-100">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <!-- folha de ccs propria -->
    <link rel="stylesheet" href="./css/style.css" />
    <!-- arquivo JS adicional -->
    <script src="./js/script.js"></script>
  </head>
  <body class="d-flex flex-column h-100">
    <header class="container-fluid bg-dark sticky-top">
      <nav
        class="d-flex justify-content-between flex-column flex-sm-row flex-wrap justify-content-center align-items-center"
      >
        <div>
          <!-- <img src="https://br.cellep.com/wp-content/themes/cellep/assets/img/logo.svg" alt="logo" /> -->

          <img
            src="https://bbz.com.br/wp-content/uploads/2021/12/LOGO.png"
            width="100"
            alt="logo"
          />
        </div>
        <ul class="nav nav-pills">
          <li>
            <a class="nav-link text-white" href="/" id="menuHome">Home</a>
          </li>
          <li>
            <a class="nav-link text-white" href="/noticias" id="menuNoticias"
              >Noticias</a
            >
          </li>
          <li>
            <a class="nav-link text-white" href="/admin" id="menuAdmin"
              >Admin</a
            >
          </li>
          <li>
            <!-- <% if (typeof(autorizado) !== 'undefined') { %> -->
            <a class="nav-link text-white" href="/admin/sair">Sair</a>
            <!-- <% } %>      -->
          </li>
        </ul>
      </nav>
    </header>
    <main class="mb-4">
      <div class="bg-light p-5 mb-4">
        <div class="container text-center">
          <h1>Seja Bem Vindo</h1>
          <p class="lead">
            Fique por dentro das últimas noticias no mundo da tecnologia
          </p>
        </div>
      </div>

      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% noticias.forEach(noticia => { %>
          <div class="col">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= noticia.titulo %></h5>
                <p class="card-text">
                  <%= noticia.conteudo.substring(0,50) %> ...
                </p>
                <p class="card-text">
                  <small class="text-muted"
                    ><%= noticia.data_criacao.toLocaleString('pt-BR').split('
                    ').join(' às ') %></small
                  >
                </p>
                <a
                  href="/noticia?id=<%= noticia.id_noticia %>"
                  class="btn btn-primary"
                  >Saiba Mais</a
                >
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>
    <footer></footer>
  </body>
</html>
